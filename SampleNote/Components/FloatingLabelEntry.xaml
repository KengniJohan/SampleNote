<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleNote.Components.FloatingLabelEntry">
    <Grid>
        <!-- Bordure principale -->
        <Border x:Name="MainBorder"
                Stroke="Gray" 
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1"
                BackgroundColor="White"
                Padding="8,100,8,0">

            <Grid>
                <!-- Label flottant -->
                <Label x:Name="FloatingLabel"
                       Text="{Binding LabelText, Source={x:Reference this}}"
                       FontSize="12"
                       TranslationY="-14"
                       Margin="10,0,0,0"
                       BackgroundColor="White"
                       TextColor="Red" />

                <!-- Champ de saisie -->
                <Entry x:Name="InputField"
                       Text="{Binding Text, Source={x:Reference this}, Mode=TwoWay}"
                       Placeholder="{Binding Placeholder, Source={x:Reference this}}"
                       BackgroundColor="Red"
                       TextColor="Black"
                       Margin="0,6,0,0" 
                       Focused="OnEntryFocused"
                       Unfocused="OnEntryUnfocused"/>
            </Grid>
        </Border>
    </Grid>
</ContentView>
